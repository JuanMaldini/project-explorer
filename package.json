{
  "name": "project-explorer",
  "version": "0.1.0",
  "private": true,
  "homepage": "./",
  "main": "electron/main.js",
  "dependencies": {
    "chokidar": "^3.6.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-icons": "^5.0.1",
    "react-scripts": "5.0.1"
  },
  "scripts": {
    "generate:icons": "node scripts/generate-icons.js",
    "prestart": "npm run generate:icons",
    "start": "concurrently -k \"cross-env BROWSER=none PORT=3001 react-scripts start\" \"wait-on http://localhost:3001 && cross-env ELECTRON_START_URL=http://localhost:3001 electron .\"",
    "start:prod": "react-scripts build && npm run generate:icons && electron .",
    "build": "react-scripts build",
    "electron:build": "react-scripts build && npm run generate:icons && cross-env CSC_IDENTITY_AUTO_DISCOVERY=false electron-builder --win",
    "dist": "npm run electron:build",
    "dist:win": "react-scripts build && npm run generate:icons && cross-env CSC_IDENTITY_AUTO_DISCOVERY=false electron-builder --win nsis",
    "dist:win:dir": "react-scripts build && npm run generate:icons && cross-env CSC_IDENTITY_AUTO_DISCOVERY=false electron-builder --win dir",
    "eject": "react-scripts eject"
  },
  "devDependencies": {
    "@resvg/resvg-js": "^2.6.2",
    "concurrently": "^9.1.2",
    "cross-env": "^7.0.3",
    "electron": "^28.2.0",
    "electron-builder": "^24.13.3",
    "electron-reload": "^2.0.0-alpha.1",
    "png-to-ico": "^2.1.0",
    "wait-on": "^7.2.0"
  },
  "build": {
    "appId": "com.projectexplorer.app",
    "productName": "Project Explorer",
    "directories": {
      "buildResources": "electron/assets",
      "output": "release"
    },
    "extraMetadata": {
      "main": "electron/main.js"
    },
    "files": [
      "build/**/*",
      "electron/**/*",
      "package.json"
    ],
    "win": {
      "target": "nsis",
      "icon": "electron/assets/icon.ico",
      "signAndEditExecutable": false
    },
    "nsis": {
      "installerIcon": "electron/assets/icon.ico",
      "uninstallerIcon": "electron/assets/icon.ico",
      "installerHeaderIcon": "electron/assets/icon.ico"
    }
  },
  "eslintConfig": {
    "extends": [
      "react-app"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
